<%- include('partial/header'); -%>
  <!-- Page Container -->
  <div class="w3-content w3-margin-top" style="max-width:1400px;">
    <% if(user) { %>
    <!-- The Grid -->
    <div class="w3-row-padding">
      <!-- Left Column -->
      <div class="w3-third">
        <div class="w3-white w3-text-grey w3-card-4">
          <% if(user.person ) { %>
            <div class="w3-display-container">
            <img src="<%= user.person.picture%>" alt="Profile" style="width:100%">
          </div>
          <% } %>
          <div class="w3-container w3-card w3-white w3-margin-bottom">
            <h2><%= user.person.name %></h2>
          </div>
          <div class="w3-container">
            <p><i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal"></i><%= user.person.professionalHeadline %></p>
            <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal"></i><%= user.person.location.name %></p>
            <hr>
            <p class="w3-large"><b><i class="fa fa-asterisk fa-fw w3-margin-right w3-text-teal"></i>Skills</b></p>
            <% for(var i=0; i<user.strengths.length; i++) {%>
                <%= user.strengths[i].name%>,&nbsp;
            <% } %>
            <br>
            <p class="w3-large w3-text-theme"><b><i class="fa fa-globe fa-fw w3-margin-right w3-text-teal"></i>Languages</b></p>
            <% for(var i=0; i<user.languages.length; i++) {%>
                <p><%= user.languages[i].language%></p>
                <p><b><%= user.languages[i].fluency%></b></p>
            <% } %>
          </div>
        </div><br>
      <!-- End Left Column -->
      </div>
      <!-- Right Column -->
      <div class="w3-twothird">
        <div class="w3-container w3-card w3-white w3-margin-bottom">
          <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Work Experience</h2>
          <% for(var i=0; i<user.jobs.length; i++) { %>
            <div class="w3-container">
                <h5 class="w3-opacity"><b><%= user.jobs[i].name%>/ <% if(user.jobs[i].organizations != false) {%><%= user.jobs[i].organizations[0].name  %><% } %></b></h5>
                <% if(user.jobs[i].responsibilities != false) {%>
                    <% for(var j=0; j<user.jobs[i].responsibilities.length; j++) { %>
                    <p><%= user.jobs[i].responsibilities[j]  %></p>
                    <% } %>
                <% } %>
                <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i><%= user.jobs[i].fromMonth%> <%= user.jobs[i].fromYear%> - 
                    <% if(user.jobs[i].toMonth === '' ) {%>
                        <span class="w3-tag w3-teal w3-round">Current</span>
                        <% }else{ %> 
                        <%= user.jobs[i].toMonth%> <%= user.jobs[i].toYear%>
                        <% } %>
                </h6>
                <hr>
              </div>
        <% } %>
        </div>

        <div class="w3-container w3-card w3-white">
          <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-certificate fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Education</h2>
          <% for(var i=0; i<user.education.length; i++) { %>
          <div class="w3-container">
            <h5 class="w3-opacity"><b><%= user.education[i].name%></b></h5>
            <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i><%= user.education[i].fromMonth%> <%= user.education[i].fromYear%> - 
                <% if(user.education[i].toMonth === '' ) {%>
                    <span class="w3-tag w3-teal w3-round">Current</span>
                    <% }else{ %> 
                    <%= user.education[i].toMonth%> <%= user.education[i].toYear%>
                    <% } %>
            </h6>
            <hr>
          </div>
          <% } %>
        </div>
      <!-- End Right Column -->
      </div>
    <!-- End Grid -->
    </div>
    <% } else { %>
      <div class="w3-container w3-card w3-white w3-margin-bottom w3-center">
      <h2>No Data Found</h2>
      </div>
    <% } %>
    <!-- End Page Container -->
  </div>

<%- include('partial/footer'); -%>
