<%- include('partial/header'); -%>
<section class="w3-panel w3-center w3-opacity" style="width: 50%; margin:0 auto;">
  <div class="w3-container">
    <div class="tab">
    <button id="peopleTab" class="tablinks" onclick="changeTab(event, 'People')">People</button>
    <button class="tablinks" onclick="changeTab(event, 'Jobs')">Jobs</button>
  </div>
  <form action="search" method="post">
    <div id="People" class="tabcontent">
      <input type="text" name="search_people" class="form-control search_field" id="search_people" placeholder="Search People.." width="80%">
      <button id="search_people_btn" type="button" class="btn btn-primary">Search</button>
    </div>
    <div id="Jobs" class="tabcontent">
      <input type="text" name="search_jobs" class="form-control search_field" id="search_jobs" placeholder="Search Jobs.." width="80%">
      <button id="search_jobs_btn" type="button" class="btn btn-primary">Search</button>
    </div>
  </form>
  </div>
  <div id="list"></div>

</section>
